{{< core/modal }}
    {{$body}}
        <div class="container">
            <form>
                <div class="form-group row">
                    <label for="inputReply" class="col-sm-2 col-form-label">Comment</label>
                    <div class="col-sm-10">
                        <input type="textarea" class="form-control" id="inputReply" placeholder="Enter a comment.">
                        <div class='invalid-feedback' id='feedback-comment'>Please enter an comment</div>
                    </div>
                </div>
            </form>
        </div>
    {{/body}}
    {{$footer}}
        <button type="button" class="btn btn-primary" data-action="reply"> Reply </button>
        <button type="button" class="btn btn-secondary" data-action="cancel"> Cancel </button>
    {{/footer}}
{{/ core/modal }}